{
  "name": "camino-flux",
  "version": "0.8.4",
  "description": "Flux géographiques de Camino, le cadastre minier numérique ouvert",
  "license": "AGPL-3.0-or-later",
  "repository": {
    "type": "git",
    "url": "https://github.com/MTES-MCT/camino-flux"
  },
  "main": "index.js",
  "scripts": {
    "build": "node --no-warnings ./worker/index.js",
    "dev": "onchange '**/*.js' -i -- npm run build",
    "start": "npm run build & node ./index.js",
    "commit": "npx git-cz",
    "release": "standard-version && git push --follow-tags origin master && npx conventional-github-releaser"
  },
  "author": {
    "name": "François Romain",
    "email": "francoisromain@gmail.com",
    "url": "https://francoisromain.com"
  },
  "dependencies": {
    "compression": "^1.7.4",
    "cron": "^1.7.1",
    "dateformat": "^3.0.3",
    "dotenv": "^8.0.0",
    "express": "^4.17.1",
    "node-fetch": "^2.6.0",
    "rimraf": "^2.6.3",
    "serve-index": "^1.9.1"
  },
  "devDependencies": {
    "@types/node": "^12.0.7",
    "@types/node-fetch": "^2.3.5",
    "commitizen": "^3.1.1",
    "conventional-github-releaser": "^3.1.3",
    "cz-conventional-changelog": "^2.1.0",
    "eslint": "^5.16.0",
    "eslint-config-prettier": "^4.3.0",
    "eslint-config-standard": "^12.0.0",
    "eslint-plugin-compat": "^3.1.1",
    "eslint-plugin-import": "^2.17.3",
    "eslint-plugin-node": "^9.1.0",
    "eslint-plugin-prettier": "^3.1.0",
    "eslint-plugin-promise": "^4.1.1",
    "eslint-plugin-standard": "^4.0.0",
    "onchange": "^6.0.0",
    "prettier": "^1.18.2",
    "standard-version": "^6.0.1"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "prettier": {
    "semi": false,
    "singleQuote": true
  },
  "eslintConfig": {
    "extends": [
      "standard",
      "prettier",
      "prettier/standard"
    ],
    "env": {
      "node": true
    },
    "plugins": [
      "prettier"
    ],
    "rules": {
      "no-throw-literal": 0,
      "prettier/prettier": [
        "error"
      ]
    }
  }
}
